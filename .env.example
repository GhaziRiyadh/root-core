# Database Configuration
DATABASE_URL=sqlite:///database.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///database.db

# Security
SECRET_KEY=supersecretkey
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Project Info
PROJECT_NAME="My FastAPI Project"
PROJECT_INFO="My FastAPI Project"
PROJECT_VERSION="1.0.0"
TIME_ZONE=Asia/Aden
UPLOAD_FOLDER=uploads
STATIC_DIR=static

# Base Models
USER_MODEL=core.apps.auth.models.user
LOG_MODEL=core.apps.base.models.log

# Apps Directory
APPS_DIR=apps

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=my-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest

# Authentication Configuration
# Custom function to get user (optional)
# GET_USER_FUNCTION=my_module.get_user

# Custom auth class (optional, defaults to core.security.DefaultAuth)
# AUTH_CLASS=core.security.DefaultAuth
# Or use a custom implementation:
# AUTH_CLASS=services.auth_service.auth.CustomAuth
